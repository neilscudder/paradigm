main()
{
  [ $# -lt 2 ] && echo "Usage: $0 PLAYNODE SERVICENAME MAC"
  local playnode="$1"
  local serviceName="$2"
  local mac="$3"
  local flatFile="portalias-${serviceName}"  
  local portalias="$(cat \
    "${flatFile}" \
    | grep "^${playnode}" \
    | /usr/bin/cut -d^ -f2)"

  if [ ! -z ${portalias} ]; then
    echo "$portalias"
  elif [ ! -z ${playnode} ]; then
    local portalias="$(cat \                                                              
      "${flatFile}" \
      | tail -n1 \
      | /usr/bin/cut -d^ -f2)"
#    (( ++portalias ))
    portalias=$((portalias+1))
    echo "$playnode^$portalias" >> "${flatFile}"                              
    echo "$portalias"                                                                   
  else                                                                                       
    echo "Playnode name was not ok."
  fi
}

main "$@"
exit 0
